alias grep="grep --color=auto"

#exa magic
alias ls="exa --icons --color=automatic --color-scale --classify"
alias ll="pwd;exa --icons --color=automatic --color-scale --classify --group-directories-first --header -l"

#bat magic
alias cat="bat --theme=\$(defaults read -globalDomain AppleInterfaceStyle &> /dev/null && echo default || echo GitHub)"

#interactive move and copy
alias mv="mv -i"
alias cp="cp -i"
